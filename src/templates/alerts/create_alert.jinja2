{% extends "base.html" %}

{% block content %}
    <div class="page-header">
        <h1>Creating alert</h1>
    </div>
    <div class="form-size">
        <form action="{{ url_for('alerts.create_alert') }}" method="POST">
            <div class="form-group">
                <label for="name">Alert/Item name</label>
                <input type="text" id="name" class="form-control" name="name" placeholder="item name"/>
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" id="url" class="form-control" name="url" placeholder="Paste URL here"/>
            </div>
            <div class="form-group">
                <label for="price_limit">Price limit</label>
                <input type="text" id="url" class="form-control" name="price_limit" placeholder="input price limit"
                       aria-describedby="priceLimitBlock"/>
                <p id="priceLimitBlock" class="help-block">We will sent you email when price under this set price</p>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>


        </form>
    </div>

{% endblock %}
