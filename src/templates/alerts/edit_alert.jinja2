{% extends "base.html" %}

{% block content %}
 <div class="page-header">
        <h1>edit alert</h1>
    </div>
    <div class="form-size">
        <form action="{{ url_for('alerts.edit_alert', alert_id=alert._id) }}" method="POST">
            <div class="form-group">
                <label for="name">Alert/Item name</label>
                <input type="text" id="name" class="form-control disabled" name="name" placeholder="item name" disabled/>
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" id="url" class="form-control disabled" name="url" placeholder="Paste URL here" disabled/>
            </div>
            <p>current price limit is {{ alert.price_limit }}</p>
            <div class="form-group">
                <label for="price_limit">Price limit</label>
                <input type="text" id="url" class="form-control" name="price_limit" placeholder="input price limit"
                       value="{{ alert.price_limit}}" aria-describedby="priceLimitBlock"/>
                <p id="priceLimitBlock" class="help-block">We will sent you email when price under this set price</p>
            </div>
            <button type="submit" class="btn btn-default">Update</button>


        </form>
    </div>
{% endblock %}
