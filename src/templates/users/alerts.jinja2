{% extends "base.html" %}

{% block content %}
    <div class="page-header">
        <h1>Alerts
            <small> showing all existing in alerts</small>
        </h1>
    </div>
    <div class="list-group">
        {% for alert in alerts %}
            <a href="{{ url_for('alerts.get_alert_page', alert_id=alert._id) }}" class="list-group-item">
                <h4 class="list-group-item-heading"> Alert for {{ alert.item.name }}</h4>
                <p class="list-group-item-text"> Last price found at <strong>${{ alert.item.price }}</strong></p>
                <p class="list-group-item-text"> You have set item price below {{ alert.price_limit }}</p>
            <p class="list-group-item-text"> Item has been check on {{ alert.last_checked.strftime("%d-%m-%y. at %H:%M") }}</p>
            </a>
        {% endfor %}
    </div>



{% endblock %}
