{% extends "base.html" %}

{% block content %}

<div class="page-header">
        <h1>Edit store</h1>
    </div>
    <div class="form-size">
        <form  method="post">
            <div class="form-group">
                <label for="name">Store name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Store name" value="{{ store.name }}">

            </div>
            <div class="form-group">
                <label for="url_prefix">Store URL prefix</label>
                <input type="text" class="form-control" id="url_prefix" name="url_prefix"
                       placeholder="Store prefix that you are going to buy the item"
                       aria-describedby="storeURLPrefix" value="{{ store.url_prefix }}">
                <span id="storeURLPrefixHelp"
                      class="help-block">What characters do URL of all items in this online store start with</span>
            </div>
            <div class="form-group">
                <label for="tag_name">Tag name</label>
                <input type="text" class="form-control" id="tag_name" name="tag_name"
                       placeholder="span" value="{{ store.tag_name }}"
                       aria-describedby="tagName">
                <span id="tagName"
                      class="help-block">HTML tag name within item price</span>
            </div>
            <div class="form-group">
                <label for="query">Query</label>
                <input type="text" class="form-control" id="query" name="query"
                       placeholder='{"id":"price-now"}' value='{{ store.query | tojson }}'
                       aria-describedby="queryHelpBlock">
                <span id="queryHelpBlock"
                      class="help-block">whta json would have to do to find price</span>
            </div>
            <button type="submit" class="btn btn-warning">Update</button>
        </form>
    </div>

{% endblock %}
